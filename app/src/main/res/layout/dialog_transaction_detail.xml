<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="30dp"
            android:src="@drawable/popup_close" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrolv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1">


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/JobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sans_bold"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:textColor="@color/Blue"
                android:textSize="19sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="Job Poster"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/JobsPosted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_new"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorGray"
                android:textSize="14sp"
                tools:ignore="LabelFor,NegativeMargin" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="Performer names"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/PerformerNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_new"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorGray"
                android:textSize="14sp"
                tools:ignore="LabelFor,NegativeMargin" />


            <TextView
                android:id="@+id/txt_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="Date of job completion"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/DateCompletion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_new"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorGray"
                android:textSize="14sp"
                tools:ignore="LabelFor,NegativeMargin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingRight="3dp"
                android:text="Payment"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:layout_weight="2"
                    android:paddingLeft="3dp"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:text="Job"
                    android:textColor="@android:color/black"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="3dp"
                    android:layout_weight="2"
                    android:paddingTop="5dp"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:text="Fees"
                    android:textColor="@android:color/black"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dp"
                    android:paddingLeft="3dp"
                    android:layout_weight="2"
                    android:paddingTop="5dp"
                    android:paddingRight="3dp"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@android:color/black"
                    android:textSize="19sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_JobAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/border_new"
                    android:padding="16dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorGray"
                    android:textSize="14sp"
                    tools:ignore="LabelFor,NegativeMargin" />


                <TextView
                    android:id="@+id/txt_FeesPaid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/border_new"
                    android:padding="16dp"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorGray"
                    android:textSize="14sp"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:gravity="center"
                    tools:ignore="LabelFor,NegativeMargin" />

                <TextView
                    android:id="@+id/txt_Total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/border_new"
                    android:padding="16dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorGray"
                    android:textSize="14sp"
                    tools:ignore="LabelFor,NegativeMargin" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="Payment Type"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/PaymentType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/border_new"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/colorGray"
                android:textSize="14sp"
                tools:ignore="LabelFor,NegativeMargin" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>