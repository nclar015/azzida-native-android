<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <include layout="@layout/toolbar_back_feed" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/let_s_get_something_done"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/R1Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0dp" />

                    <ImageView
                        android:id="@+id/img_cam_hide"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_image"
                        android:padding="5dp"
                        android:scaleType="center"
                        android:src="@drawable/addphoto_camera" />


                    <ImageView
                        android:id="@+id/img_cam"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/iv_profile_image"
                        android:layout_marginStart="-35dp"
                        android:layout_marginLeft="-35dp"
                        android:layout_marginTop="-40dp"
                        android:layout_toEndOf="@+id/iv_profile_image"
                        android:layout_toRightOf="@+id/iv_profile_image"
                        android:src="@drawable/addphoto_plus" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/R2Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/R1Image"
                    android:layout_toRightOf="@+id/R1Image"
                    android:visibility="gone">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0dp" />

                    <ImageView
                        android:id="@+id/img_cam_hide2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_image"
                        android:padding="5dp"
                        android:scaleType="center"
                        android:src="@drawable/addphoto_camera" />


                    <ImageView
                        android:id="@+id/img_cam2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/iv_profile_image2"
                        android:layout_marginStart="-35dp"
                        android:layout_marginLeft="-35dp"
                        android:layout_marginTop="-40dp"
                        android:layout_toEndOf="@+id/iv_profile_image2"
                        android:layout_toRightOf="@+id/iv_profile_image2"
                        android:src="@drawable/addphoto_plus" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/R3Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/R2Image"
                    android:layout_toRightOf="@+id/R2Image"
                    android:visibility="gone">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_image3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="0dp" />

                    <ImageView
                        android:id="@+id/img_cam_hide3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/rounded_image"
                        android:padding="5dp"
                        android:scaleType="center"
                        android:src="@drawable/addphoto_camera" />


                    <ImageView
                        android:id="@+id/img_cam3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/iv_profile_image3"
                        android:layout_marginStart="-35dp"
                        android:layout_marginLeft="-35dp"
                        android:layout_marginTop="-40dp"
                        android:layout_toEndOf="@+id/iv_profile_image3"
                        android:layout_toRightOf="@+id/iv_profile_image3"
                        android:src="@drawable/addphoto_plus" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/R1Image"
                    android:layout_toRightOf="@+id/R1Image"
                    android:text="@string/add_photo"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/R2Image"
                    android:layout_toRightOf="@+id/R2Image"
                    android:text="@string/add_photo"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/R3Image"
                    android:layout_toRightOf="@+id/R3Image"
                    android:text="@string/add_photo"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/what_would_you_call_it"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_title_here"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/when_do_you_need_it"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/edt_select_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_new"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="@string/select_date"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                app:drawableEndCompat="@drawable/addjob_calander" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/how_long_will_it_take"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_new"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spinner_How_long"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/how_much_do_you_want_to_pay"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_amount"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/how_would_you_categorize_it"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_new"
                android:padding="10dp">

                <Spinner
                    android:id="@+id/spinner_categorize"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownWidth="match_parent" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/where_is_it_at"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/edt_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_new"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:hint="@string/enter_the_location"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:paddingLeft="3dp"
                android:paddingTop="10dp"
                android:paddingRight="3dp"
                android:text="@string/what_are_all_the_details"
                android:textColor="@android:color/black"
                android:textSize="19sp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edt_work_details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:height="180dp"
                    android:gravity="top"
                    android:hint="@string/enter_the_work_details_here"
                    android:inputType="textMultiLine"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18.7dp"
                android:background="@drawable/blue_fill__rounded_color"
                android:gravity="center"
                android:onClick="Post"
                android:text="@string/post"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>